<?xml version="1.0" encoding="utf-8"?>

<layout>
    <data>
        <variable
            name="main"
            type="com.gsm.bee_assistant_android.ui.MainActivity" />
    </data>

    <androidx.drawerlayout.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:fitsSystemWindows="true"
        tools:context=".ui.MainActivity"
        >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <include layout="@layout/title_bar"/>

            <LinearLayout
                android:id="@+id/explainText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="70dp"
                    android:layout_marginStart="30dp"
                    style="@style/title_font_dark_orange"
                    android:text="'야, 꿀벌'"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    style="@style/title_font_black"
                    android:text="이라고 불러보세요." />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:layout_marginStart="30dp"
                    style="@style/content_font"
                    android:textColor="#393939"
                    android:text="&quot;야, 꿀벌, 오늘 중식이 뭐야&quot;" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="30dp"
                    style="@style/content_font"
                    android:textColor="#717171"
                    android:text="&quot;야, 꿀벌, 오늘 해야 할 과제가 뭐야&quot;" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="30dp"
                    style="@style/content_font"
                    android:textColor="#989898"
                    android:text="&quot;야, 꿀벌, 오늘 날씨는 어때&quot;" />

            </LinearLayout>

            <ImageButton
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_marginTop="50dp"
                android:layout_gravity="center"
                android:src="@drawable/bee"
                android:scaleType="fitCenter"
                android:background="@drawable/main_button">

            </ImageButton>

        </LinearLayout>

        <com.google.android.material.navigation.NavigationView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:id="@+id/navigation_view">

        </com.google.android.material.navigation.NavigationView>

    </androidx.drawerlayout.widget.DrawerLayout>
</layout>